            <div class="well">
                <div class="row">
                    <div class="pull-left col-md-6">
                    Zamówienie nr. {{ order.order_id }}<br/>
                    Data zamówienia: {{ order.cdate|date("d-m-Y H:i:s") }}<br/>
                    Data modyfikacji: {{ order.mdate|date("d-m-Y H:i:s") }}<br/>
                    Stan zamówienia: {{ order.order_status_name }}<br/>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <strong>Rachunek</strong><br/>  
                        <table class="table table-bordered ">
                        <tr>
                            <td>E-mail:</td>
                            <td>{{ order.user_email }}</td>
                        </tr>
                        <tr>
                            <td>Nazwa firmy:</td>
                            <td>{{ order.company|replace({'&quot;':'"'}) }}</td>
                        </tr>
                        <tr>
                            <td>Imię i Nazwisko:</td>
                            <td><a href="index.php?site=admin&action=shop&act=users&show=userDetail&userId={{ order.user_id }}">{{ order.first_name }} {{ order.last_name }}</a></td>
                        </tr>
                        <tr>
                            <td>Ulica:</td>
                            <td>{{ order.address_1 }}</td>
                        </tr>
                        <tr>
                            <td>Miasto:</td>
                            <td>{{ order.city }}</td>
                        </tr>
                        <tr>
                            <td>Kod pocztowy:</td>
                            <td>{{ order.zip }}</td>
                        </tr>
                        <tr>
                            <td>Telefon:</td>
                            <td>{{ order.phone_1 }}</td>
                        </tr>
                        <tr>
                            <td>Telefon kom.:</td>
                            <td>{{ order.phone_2 }}</td>
                        </tr>
                        <tr>
                            <td>Numer NIP:</td>
                            <td>{{ order.extra_field_1 }}</td>
                        </tr>
                        <tr>
                            <td>Konsultant:</td>
                            <td>{{ order.extra_field_2 }} -{{ order.konsultantId }} - {{ order.konsultantFirstName }} {{ order.konsultantLastName }}</td>
                        </tr>
                         </table>
                    </div>
                    <div class="col-md-6">
                        <strong>Wysyłka do</strong>
                        {% set countAddresses = orderSendAddress|length %}
                                {% if countAddresses > 1 %}
                                    {% set addType = 'ST'%}
                                {% else %}
                                    {% set addType = 'BT'%}
                                {% endif %}
                                {% for userSendTo in orderSendAddress%} 
                                    {% if userSendTo.address_type == addType %}
                                        <table class="table table-bordered">
                                        <tr>
                                            <td>Alias:</td>
                                            <td>{{ userSendTo.address_type_name }}</td>
                                        </tr>
                                        <tr>
                                            <td>Nazwa firmy:</td>
                                            <td>{{ userSendTo.company|replace({'&quot;':'"'}) }}</td>
                                        </tr>
                                        <tr>
                                            <td>Imię i Nazwisko:</td>
                                            <td>{{ userSendTo.first_name }} {{ userSendTo.last_name }}</td>
                                        </tr>
                                        <tr>
                                            <td>Ulica:</td>
                                            <td>{{ userSendTo.address_1 }}</td>
                                        </tr>
                                        <tr>
                                            <td>Miasto:</td>
                                            <td>{{ userSendTo.city }}</td>
                                        </tr>
                                        <tr>
                                            <td>Kod pocztowy:</td>
                                            <td>{{ userSendTo.zip }}</td>
                                        </tr>
                                        <tr>
                                            <td>Telefon:</td>
                                            <td>{{ userSendTo.phone_1 }}</td>
                                        </tr>
                                        <tr>
                                            <td>Telefon kom.:</td>
                                            <td>{{ userSendTo.phone_2 }}</td>
                                        </tr>
                                        <tr>
                                            <td>Numer NIP:</td>
                                            <td>{{ userSendTo.extra_field_1 }}</td>
                                        </tr>
                             </table>
                             {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="well table-responsive">
                    <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td><strong>Ilość</strong></td>
                            <td><strong>Nazwa</strong></td>
                            <td><strong>Cena netto</strong></td>
                            <td><strong>Cena brutto</strong></td>
                            <td><strong>Podatek</strong></td>
                            <td><strong>Suma</strong></td>
                        </tr>
                    </thead>
                    {% for item in orderProducts %}
                        <tr>
                            <td>{{ item.product_quantity }}szt</td>
                            <td>{{ item.product_name }}</td>
                            <td>{{ item.product_item_price|round(2,"common") }}</td>
                            <td>{{ item.product_final_price|round(2,"common") }}</td>
                            <td>{{ item.tax_rate * 100 }}%</td>
                            <td>{{ item.product_quantity * item.product_final_price|round(2,"common") }}</td>
                        </tr>
                    {% endfor %}
                        <tr>
                            <td colspan="5">
                            </td>
                            <td>
                                Suma netto:
                            </td>
                            <td>
                                {{ order.order_subtotal|round(2,"common") }}zł
                            </td>
                        </tr>
                        <tr>
                            <td colspan="5">
                            </td>
                        
                            <td>
                                Suma:
                            </td>
                            <td>
                                {{ order.order_total|round(2,"common") }}zł
                            </td>
                        </tr>
                        <tr>
                            <td colspan="5">
                            </td>
                        
                            <td>
                                Koszt administracyjny:
                            </td>
                        </tr>
                        <tr>
                            <td colspan="5">
                            </td>
                        
                            <td>
                                Obrót:
                            </td>
                            <td>
                            {% set ron = order.order_subtotal - order.administrationFee %}
                                {{ ron|round(2,"common") }} zł
                            </td>
                        </tr>
                    </table>
                    
                </div>

                <div class="well">
                    <strong>Informacje o wysyłce</strong><br/>
                    <div class="col-md-6">
                        Metoda płatności: {{ order.payment_method_name }}<br/>
                    </div>
                    <div class="col-md-6">
                        Rodzaj wysyłki:
                        
                    </div>
                    <br/>

                </div>
            </div>
            <div class="well">
                <strong>Notatka klienta</strong><br/>
                {{ order.customer_note }}
             </div>
             </div>
